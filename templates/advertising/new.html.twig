{% extends 'base.html.twig' %}

{% block title %}Share your property!{% endblock %}

{% form_theme form 'advertising/_collection.html.twig' %}

{% block body %}
    <div class="container">
        <h2>Create a new post!</h2>
        {# This will generate the form #}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
        <button type="submit" class="btn btn-primary">Create a new ad!</button>
        {{ form_end(form) }}
    </div>

{% endblock %}



{% block javascripts %}
    <script src="{{ asset('assets/js/ad.js') }}"></script>
{% endblock %}